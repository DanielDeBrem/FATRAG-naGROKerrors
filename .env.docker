# Docker Environment Variables for FATRAG
# Copy this file to .env and update with your values

# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_PASSWORD=your_secure_mysql_password_here

# Application Security
SECRET_KEY=your_super_secret_key_change_this_in_production_at_least_32_chars

# External Service URLs (these are for Docker internal networking)
# These should not be changed unless you know what you're doing
MYSQL_HOST=mysql
MILVUS_HOST=milvus
OLLAMA_HOST=http://ollama:11434
REDIS_URL=redis://redis:6379/0

# Application Settings
APP_DEBUG=false
LOG_LEVEL=INFO
APP_HOST=0.0.0.0
APP_PORT=8050

# Model Configuration
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_GENERATION_MODEL=llama2
OLLAMA_TIMEOUT=30

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB
ALLOWED_EXTENSIONS=pdf,docx,xlsx

# Dutch Language Settings
DEFAULT_LANGUAGE=nl
SUMMARY_MAX_LENGTH=500
PII_DETECTION_ENABLED=true

# Financial Data APIs (optional)
YAHOO_FINANCE_ENABLED=true
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Monitoring
PROMETHEUS_PORT=9090
